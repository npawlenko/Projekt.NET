@page
@model Projekt.NET.Pages.Login.UserLoginModel
@{
    ViewData["Title"] = "Zaloguj się";
    ViewData["Page"] = "Zaloguj się";
}

@if(Model.Message != null)
{
<div class="alert alert-danger">
    @Model.Message
</div>
}

<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="user.Username"></label>
            <div class="col-sm-6">
                <input asp-for="user.Username" />
            </div>

            <span asp-validation-for="user.Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="user.Password"></label>
            <div class="col-sm-6">
                <input asp-for="user.Password" />
            </div>

            <span asp-validation-for="user.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>